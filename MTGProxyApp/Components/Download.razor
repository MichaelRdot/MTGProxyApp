<MudText Typo="Typo.h6">@_loadingMessage</MudText>
@if (_loadingMessage.Equals("Creating Pdf..."))
{
    <MudProgressCircular Color="Color.Primary" Value="@_cardsPrintedValue" Max="100" Size="Size.Large">
        <ChildContent>
            <MudText Typo="Typo.subtitle2">@_cardsPrintedValue.ToString("0")%</MudText>
        </ChildContent>
    </MudProgressCircular>
} else { <MudProgressCircular Color="Color.Primary" Indeterminate Size="Size.Large"/> }

